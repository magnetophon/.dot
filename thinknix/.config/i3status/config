general {
  colors = true
  color_good = "#000000"
  color_degraded = "#696969"
  color_bad = "#0000FF"
  # color_separator = "#FFFF00"
  # separator = "x"
  interval = 1
}

order  += "volume master"
order  += "disk /"
order  += "disk /home"
order  += "wireless _first_"
order  += "ethernet _first_"
order  += "battery all"
order  += "cpu_usage"
order  += "cpu_temperature 0"
order  += "time"

volume master {
  format = " %volume"
  format_muted = " (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  separator = false
  separator_block_width = 20
}


disk "/" {
  format = " %avail"
  low_threshold = 15
  threshold_type = gbytes_avail
  separator = false
  separator_block_width = 20
}

disk "/home" {
  format =" %avail"
  low_threshold = 15
  threshold_type = gbytes_avail
  separator = false
  separator_block_width = 20
}

wireless _first_ {
  format_up = " %quality at %essid %ip"
  format_down = " "
  separator = false
  separator_block_width = 20
}

ethernet _first_ {
  format_up = " %speed  %ip"
  format_down = ""
  separator = false
  separator_block_width = 20
}

battery all {
  format = "%status %percentage %remaining"
  last_full_capacity = true
  integer_battery_capacity = true
  hide_seconds = true
  threshold_type = time
  low_threshold = 10
  status_chr = ""
  status_bat = ""
  status_unk = ""
  status_full = ""
  separator = false
  separator_block_width = 20
}

cpu_usage {
  format = " %usage"
  separator = false
  separator_block_width = 20
}

cpu_temperature 0 {
  format = " %degrees°C"
  # run sensors, see high value
  max_threshold = 86
  separator = false
  separator_block_width = 20
}


time {
  format = "%a %d/%m/%y %H:%M"
}