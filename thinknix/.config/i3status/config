general {
  colors = true
  color_good = "#000000"
  color_degraded = "#696969"
  color_bad = "#0000FF"
  # color_separator = "#FFFF00"
  # separator = "x"
  interval = 1
}

order  += "volume master"
order  += "disk /"
order  += "disk /home"
order  += "wireless wlan0"
order  += "ethernet eth0"
order  += "battery all"
order  += "cpu_usage"
order  += "cpu_temperature 0"
order  += "time"

volume master {
  format = " %volume"
  format_muted = " (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  separator = false
  separator_block_width = 20
}


disk "/" {
  format = "/: %avail"
  low_threshold = 15
  threshold_type = gbytes_avail
  separator = false
  separator_block_width = 20
}

disk "/home" {
  format ="/home: %avail"
  low_threshold = 15
  threshold_type = gbytes_avail
  separator = false
  separator_block_width = 20
}

wireless wlan0 {
  format_up = "%quality at %essid %ip"
  format_down = " "
  separator = false
  separator_block_width = 20
}

ethernet eth0 {
  format_up = "%speed  %ip"
  format_down = ""
  separator = false
  separator_block_width = 20
}

battery all {
  format = "%status %percentage %remaining"
  # path = "/sys/class/power_supply/BAT%d/uevent"
  last_full_capacity = true
  integer_battery_capacity = true
  hide_seconds = true
  threshold_type = time
  low_threshold = 10
  separator = false
  separator_block_width = 20
}

cpu_usage {
  format = "cpu: %usage"
  separator = false
  separator_block_width = 20
}

cpu_temperature 0 {
  format = "T: %degrees°C"
  # run sensors, see high value
  max_threshold = 86
  separator = false
  separator_block_width = 20
}


time {
  format = "%a %d/%m/%y %H:%M"
}