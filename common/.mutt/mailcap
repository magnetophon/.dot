#MS office documents
application/excel; $HOME/.mutt/mutt_bgrun libreoffice %s
application/ms-exc; $HOME/.mutt/mutt_bgrun libreoffice %s
application/msword; $HOME/.mutt/mutt_bgrun libreoffice %s
application/vnd.ms-exc; $HOME/.mutt/mutt_bgrun libreoffice %s
application/vnd.ms-excel; $HOME/.mutt/mutt_bgrun libreoffice %s
application/x-msexcel; $HOME/.mutt/mutt_bgrun libreoffice %s
application/vnd.openxml; $HOME/.mutt/mutt_bgrun libreoffice %s
application/vnd.openxmlformats-officedocument.wordprocessingml.document; $HOME/.mutt/mutt_bgrun libreoffice %s


application/vnd.oasis.opendocument.text; $HOME/.mutt/mutt_bgrun libreoffice %s
# Images
image/*; $HOME/.mutt/mutt_bgrun sxiv %s

# PDFs
application/pdf; $HOME/.mutt/mutt_bgrun zathura %s

# HTML
text/html; $HOME/.mutt/mutt_bgrun $BROWSER %s

text/*; $HOME/.mutt/mutt_bgrun $EDITOR %s

# Unidentified files
application/octet-stream; $HOME/.mutt/mutt_bgrun rifle %s

multipart/alternative; $HOME/.mutt/mutt_bgrun less %s

audio/mpeg; $HOME/.mutt/mutt_bgrun mpv %s
